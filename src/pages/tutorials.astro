---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.tsx';
import HomeHeader from '../components/HomeHeader.astro';
import Footer from '../components/Footer/Footer.astro'
import Tutorials from '../components/Tutorials/Tutorials.astro'

let pageTitle = 'Tutorials';
let pageDescription = '';
let seoTitle = 'Tutorials | How To Code';
let seoDescription = 'How to Code\'s web development tutorials';
---

<html lang="en">
  <head>
    <BaseHead title={seoTitle} description={seoDescription} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav client:load />
    
    <main class="py-12 lg:py-20">
      <article class="max-w-6xl mx-auto px-3">
        <HomeHeader title={pageTitle} description={pageDescription} />
        <Tutorials />
      </article>
    </main>
    
    <Footer />
  </body>
</html>
