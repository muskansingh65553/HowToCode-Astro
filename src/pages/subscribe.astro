---
// Component Imports
import BaseHead from '$components/Head/BaseHead.astro';
import Nav from '../components/Nav.tsx';
import HomeHeader from '$components/HomeHeader.astro';
import Footer from '$components/Footer/Footer.astro'
import EmailSignup from '$components/Subscribe/EmailSignup.astro'
import BooksGrid from '$components/Subscribe/BooksGrid.astro'

interface MarkdownFrontmatter {
  date: number;
}

let pageTitle = 'Subscribe';
let pageDescription = 'and get all of my books for free!';
let seoTitle = 'Subscribe | How To Code';
let seoDescription = 'Subsribe to the How to Code Newsletter and get all of my books for free!';
---

<html lang="en">
  <head>
    <BaseHead title={seoTitle} description={seoDescription} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav client:only />

    <main class="py-12 lg:py-20">
      <article class="max-w-6xl mx-auto px-3">
        <HomeHeader title={pageTitle} description={pageDescription} />
        
        <BooksGrid />
        <EmailSignup />
      </article>
    </main>
    <Footer />
  </body>
</html>
