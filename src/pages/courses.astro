---
// Component Imports
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import HomeHeader from '../components/HomeHeader.astro';
import Courses from '../components/Courses/Courses.tsx';
import Footer from '../components/Footer/Footer.astro'

interface MarkdownFrontmatter {
  date: number;
}

let pageTitle = 'Courses';
let pageDescription = 'All courses are free!';
let seoTitle = 'Courses | How To Code';
let seoDescription = 'How to Code\'s free web development courses';
---

<html lang="en">
  <head>
    <BaseHead title={seoTitle} description={seoDescription} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12 lg:py-20">
      <article class="max-w-7xl mx-auto px-3">
        <HomeHeader title={pageTitle} description={pageDescription} />
        <Courses />
      </article>
    </main>
    <Footer />
  </body>
</html>
