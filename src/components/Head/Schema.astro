---
const {content} = Astro.props;
const {title, description, date, hero, astro} = content;
---

  
<script type=”application/ld+json”>
{
“@context”: “http://schema.org”,
“@type”: “BlogPosting”,
“mainEntityOfPage”:{
“@type”:”WebPage”,
“@id”:”https://howtocode.io”
},
“headline”: {title},
“image”: {
“@type”: “ImageObject”,
“url”: {hero}
},
“datePublished”: {date},
“dateModified”: {date},
“author”: {
“@type”: “Person”,
“name”: “Robert Guss”
},
“publisher”: {
“@type”: “Organization”,
“name”: “How to Code”
}
},
“description”: {description},
“articleBody”: {astro.source}
}
</script>